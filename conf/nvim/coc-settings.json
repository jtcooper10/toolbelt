{
    "tsserver.npm": "/usr/bin/npm",
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp"
            ],
            "rootPatterns": [
                ".ccls",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
    "python.pythonPath": "python3",
    "python.venvPath": "~/venvs/",
    "python.venvFolders": [
        "envs",
        "env",
        ".pyenv",
        ".direnv"
    ],
    
    "python.jediPath": "~/venvs/jedi/lib/python3.9/site-packages",
    "python.jediEnabled": true,
    "suggest.timeout": 5000,

    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/venvs/black/bin/black",

    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.pylintPath": "~/venvs/pylint/bin/pylint",
    "python.linting.pylintArgs": [
        "--init-hook='import pylint_env; pylint_env.inithook(force_venv_activation=True)'"
    ]
}
